

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-7">
      <% if @van.photos.attached? %>
        <div id="vanPhotosCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
          <div class="carousel-inner rounded-4 shadow">
            <% @van.photos.each_with_index do |photo, idx| %>
              <div class="carousel-item <%= 'active' if idx == 0 %>">
                <%= image_tag photo, class: "d-block w-100", style: "object-fit:cover; height:400px;" %>
              </div>
            <% end %>
          </div>
          <% if @van.photos.count > 1 %>
            <button class="carousel-control-prev" type="button" data-bs-target="#vanPhotosCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#vanPhotosCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="bg-light d-flex align-items-center justify-content-center rounded-4 shadow" style="height:400px;">
          <span class="text-muted">Aucune photo disponible</span>
        </div>
      <% end %>
    </div>
    <div class="col-md-5">
      <div class="card shadow-sm p-4 h-100">
        <h2 class="mb-3"><%= @van.title %></h2>
        <p class="text-muted mb-4"><%= @van.description %></p>
        <ul class="list-unstyled mb-4">
          <li><i class="bi bi-cash-coin me-2"></i><strong>Prix:</strong> <%= number_to_currency(@van.price) %> / jour</li>
          <li><i class="bi bi-person-fill me-2"></i><strong>Places:</strong> <%= @van.seats %></li>
          <li><i class="bi bi-arrows-angle-expand me-2"></i><strong>Taille:</strong> <%= @van.size %></li>
        </ul>
        <div class="d-grid gap-2">
          <%= link_to "Modifier ce van", edit_van_path(@van), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "Retour Ã  la liste", vans_path, class: "btn btn-outline-secondary me-2"  %>
      <%= link_to "Accueil", root_path, class: "btn btn-outline-secondary"  %>
    </div>
  </div>
</div>
